				"HI3650_IOM3_MBX11",
				"HI3650_IOM3_MBX12",
				"HI3650_LPM3_MBX13",
				"HI3650_LPM3_MBX14",
				"HI3650_LPM3_MBX15",
				"HI3650_LPM3_MBX16",
				"HI3650_LPM3_MBX17",
