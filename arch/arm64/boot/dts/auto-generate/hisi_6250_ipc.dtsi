				********************/
		/*remote_processor_type = <0 1 3 3 4 3 2 3 3 3 3 3 2 2 2 3 3 3 3 3 4 5 5 5 6 6 6 7 7 3 3 3 3>;*/
		remote_processor_type = <0 1 3 3 4 3 2 7 7 2 2 2 3 3 3 3 3 4 7 7 3 3 4>;/*don't forget to increase the number when add a mailbox channel or decrease when delete one*/
		unlock_key = <0x1ACCE551>;
		capability = <8>;
		status = "disable";

		/*
