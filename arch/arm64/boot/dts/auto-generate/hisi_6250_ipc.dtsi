		#address-cells = <2>;
		#size-cells = <2>;
		compatible = "hisilicon,HiIPCV230";
		reg = <0x0 0xe896b000 0x0 0x1000>;
		interrupts = <0 192 4>, <0 193 4>;
		clocks = <&pclk>;
		clock-names = "apb_pclk";

