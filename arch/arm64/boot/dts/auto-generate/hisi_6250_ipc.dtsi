		mailboxes = <21>;/*don't forget to increase the number when add a mailbox channel or decrease when delete one*/
		mailbox-0 {
			compatible = "HiIPCV230,rx-mailbox-fast";
			func = <1 0 1>;
			interrupts = <0 197 4>;
			src_remote_processor = "HI3650_LPM3_MBX0";
			des_remote_processor = "HI3650_GIC_1";
			src_bit = <3>;
			des_bit = <0>;
			index = <0>;
		};

